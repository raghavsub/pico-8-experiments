-- way (with a fucking tank)

tank = {}
tank.x = 64
tank.y = 64
tank.sprite = 0

function _update()
  if btn(0) then
    tank.sprite = 0
  end
  if btn(1) then
    tank.sprite = 1
  end
  if btn(2) then
    tank.sprite = 2
  end
  if btn(3) then
    tank.sprite = 3
  end
end

function _draw()
  cls()
  spr(tank.sprite, tank.x, tank.y)
end
